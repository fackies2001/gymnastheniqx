@push('js')
    <script>
        $(document).ready(function() {
            // Destroy existing DataTable if any
            if ($.fn.DataTable.isDataTable('#gymTable')) {
                $('#gymTable').DataTable().destroy();
            }

            // Initialize DataTable
            let table = $('#gymTable').DataTable({
                destroy: true, // Auto-destroy kung meron na
                processing: true,
                serverSide: true,
                ajax: {
                    url: "{{ route('gym.data') }}",
                    error: function(xhr, error, thrown) {
                        console.log('DataTables Error:', xhr.responseText);
                        alert('Error loading data: ' + xhr.responseText);
                    }
                },
                columns: [{
                        data: 'item_code',
                        name: 'item_code'
                    },
                    {
                        data: 'name',
                        name: 'name'
                    },
                    {
                        data: 'quantity',
                        name: 'quantity',
                        className: 'text-center'
                    },
                    {
                        data: 'status',
                        name: 'status',
                        className: 'text-center'
                    },
                    {
                        data: 'action',
                        name: 'action',
                        orderable: false,
                        searchable: false
                    }
                ]
            });

            // Submit Form via AJAX
            $('#addEquipmentForm').on('submit', function(e) {
                e.preventDefault();
                $.ajax({
                    url: "{{ route('gym.store') }}",
                    method: "POST",
                    data: $(this).serialize(),
                    success: function(response) {
                        $('#addEquipmentModal').modal('hide');
                        $('#addEquipmentForm')[0].reset();
                        Swal.fire('Success!', response.message, 'success');
                        table.ajax.reload(null, false); // Refresh without resetting pagination
                    },
                    error: function(xhr) {
                        console.log('Error:', xhr.responseText);
                        Swal.fire('Error!', xhr.responseJSON?.message || 'Something went wrong',
                            'error');
                    }
                });
            });
        });
    </script>
